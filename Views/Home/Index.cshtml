@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ChillSpot - Iniciar Sesión</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        'navy': '#1e3a8a',
                        'navy-dark': '#1e40af',
                        'navy-light': '#3b82f6'
                    }
                }
            }
        }
    </script>
</head>
<body class="min-h-screen flex items-center justify-center p-4 relative overflow-hidden">
    <!-- Animated Background -->
    <div class="fixed inset-0 -z-10">
        <div class="absolute inset-0 bg-gradient-to-br from-gray-900 via-gray-800 to-blue-900"></div>
        <!-- ... (resto de tu fondo animado) ... -->
    </div>

    <!-- Main Container -->
    <div class="bg-white bg-opacity-95 backdrop-blur-sm rounded-2xl shadow-2xl w-full max-w-md p-8 border border-gray-200 relative">
        <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-blue-800 via-blue-700 to-blue-600 rounded-t-2xl"></div>
        <div class="text-center mb-8 pt-4">
            <div class="inline-flex items-center justify-center w-16 h-16 bg-gradient-to-br from-blue-800 to-blue-600 rounded-2xl mb-4 shadow-lg relative">
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                </svg>
                <div class="absolute inset-0 bg-gradient-to-br from-blue-800 to-blue-600 rounded-2xl blur-lg opacity-30 -z-10"></div>
            </div>
            <h1 class="text-3xl font-bold text-gray-900 mb-2">ChillSpot</h1>
            <p class="text-gray-600 text-sm">Accede a tu contenido audiovisual</p>
        </div>

        <!-- Login Form -->
        <form method="post" class="space-y-6">
            <div>
                <label for="email" class="block text-sm font-semibold text-gray-800 mb-2">
                    Correo electrónico
                </label>
                <div class="relative">
                    <input type="email"
                           id="email"
                           name="email"
                           required
                           class="w-full px-4 py-3 border-2 border-gray-300 rounded-xl text-gray-900 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-800 focus:border-blue-800 transition-all duration-200 bg-white bg-opacity-90"
                           placeholder="tu@email.com">
                </div>
            </div>

            <div>
                <label for="password" class="block text-sm font-semibold text-gray-800 mb-2">
                    Contraseña
                </label>
                <div class="relative">
                    <input type="password"
                           id="password"
                           name="password"
                           required
                           class="w-full px-4 py-3 border-2 border-gray-300 rounded-xl text-gray-900 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-800 focus:border-blue-800 transition-all duration-200 bg-white bg-opacity-90"
                           placeholder="••••••••">
                </div>
            </div>

            <div class="flex items-center justify-between">
                <div class="flex items-center">
                    <input type="checkbox"
                           id="remember"
                           name="remember"
                           class="h-4 w-4 text-blue-800 border-2 border-gray-300 rounded focus:ring-blue-800 focus:ring-2">
                    <label for="remember" class="ml-2 text-sm font-medium text-gray-700">
                        Recordar sesión
                    </label>
                </div>
                <a href="#" class="text-sm text-blue-800 hover:text-blue-900 font-medium transition-colors">
                    ¿Olvidaste tu contraseña?
                </a>
            </div>

            <button type="submit"
                    class="w-full bg-gradient-to-r from-blue-800 to-blue-700 hover:from-blue-900 hover:to-blue-800 text-white font-semibold py-4 px-4 rounded-xl transition-all duration-200 transform hover:scale-[1.02] focus:outline-none focus:ring-2 focus:ring-blue-800 focus:ring-offset-2 shadow-lg relative overflow-hidden">
                <span class="relative z-10">Iniciar Sesión</span>
                <div class="absolute inset-0 bg-gradient-to-r from-blue-600 to-blue-500 opacity-0 hover:opacity-20 transition-opacity duration-200"></div>
            </button>
        </form>

        @if (ViewBag.Error != null)
        {
            <div class="text-red-600 mt-4 text-center">@ViewBag.Error</div>
        }

        <!-- Sign Up Link -->
        <div class="mt-8 text-center">
            <p class="text-gray-600 text-sm">
                ¿No tienes una cuenta?
                <a href="#" class="text-blue-800 hover:text-blue-900 font-semibold transition-colors">
                    Regístrate aquí
                </a>
            </p>
        </div>

        <!-- Footer -->
        <div class="mt-8 pt-6 border-t border-gray-200">
            <p class="text-center text-xs text-gray-500">
                Al iniciar sesión, aceptas nuestros
                <a href="#" class="text-gray-700 hover:text-blue-800 transition-colors font-medium">Términos de Servicio</a>
                y
                <a href="#" class="text-gray-700 hover:text-blue-800 transition-colors font-medium">Política de Privacidad</a>
            </p>
        </div>
    </div>
</body>
</html>
