@model ChillSpot.Models.Estado

@{
    ViewData["Title"] = "Crear Estado";
}

<div class="container mb-5">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-5 fw-bold">Nuevo Estado</h1>
            <p class="text-muted">Complete el formulario para registrar un nuevo estado en ChillSpot</p>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <!-- Form Card -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-light py-3">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-plus-circle me-2"></i>Información del Estado
                    </h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" class="needs-validation" novalidate autocomplete="off">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-4">
                            <label asp-for="Nombre" class="form-label fw-medium">
                                <i class="bi bi-flag me-2"></i>Nombre
                            </label>
                            <input asp-for="Nombre" class="form-control form-control-lg" placeholder="Nombre del estado" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                            <div class="form-text">Ingrese el nombre del estado</div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Descripcion" class="form-label fw-medium">
                                <i class="bi bi-card-text me-2"></i>Descripción
                            </label>
                            <input asp-for="Descripcion" class="form-control form-control-lg" placeholder="Descripción del estado" />
                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                            <div class="form-text">Ingrese una breve descripción del estado</div>
                        </div>

                        <hr class="my-4">

                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2"></i>Volver al Listado
                            </a>
                            <button type="submit" class="btn btn-success btn-lg px-4">
                                <i class="bi bi-check-circle me-2"></i>Guardar Estado
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <!-- Help Card -->
            <div class="card border-0 bg-light mb-4">
                <div class="card-body p-4">
                    <h5 class="card-title">
                        <i class="bi bi-info-circle me-2"></i>Información Importante
                    </h5>
                    <p class="card-text">Asegúrese de que los datos del estado sean correctos y estén actualizados.</p>
                    <ul class="list-group list-group-flush bg-transparent mb-3">
                        <li class="list-group-item bg-transparent border-0 ps-0">
                            <i class="bi bi-check-circle-fill text-success me-2"></i>El nombre debe ser claro y representativo
                        </li>
                        <li class="list-group-item bg-transparent border-0 ps-0">
                            <i class="bi bi-check-circle-fill text-success me-2"></i>La descripción ayuda a identificar el uso del estado
                        </li>
                    </ul>
                    <p class="card-text">Para más información sobre estados, contacte con el equipo de soporte.</p>
                    <a href="#" class="btn btn-outline-success">
                        <i class="bi bi-question-circle me-2"></i>Ayuda con Estados
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
