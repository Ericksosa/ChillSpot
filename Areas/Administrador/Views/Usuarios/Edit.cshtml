@model ChillSpot.Models.Usuario

@{
    ViewData["Title"] = "Editar Usuario";
}

<div class="container mb-5">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-5 fw-bold">Editar Usuario</h1>
            <p class="text-muted">Modifica la información del usuario en ChillSpot</p>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <!-- Form Card -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-light py-3">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-pencil-square me-2"></i>Información del Usuario
                    </h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit" class="needs-validation" novalidate autocomplete="off">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-4">
                            <label asp-for="Nombre" class="form-label fw-medium">
                                <i class="bi bi-person me-2"></i>Nombre
                            </label>
                            <input asp-for="Nombre" class="form-control form-control-lg" placeholder="Nombre completo" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                            <div class="form-text">Modifique el nombre completo del usuario</div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Correo" class="form-label fw-medium">
                                <i class="bi bi-envelope me-2"></i>Correo
                            </label>
                            <input asp-for="Correo" class="form-control form-control-lg" placeholder="Correo electrónico" />
                            <span asp-validation-for="Correo" class="text-danger"></span>
                            <div class="form-text">Modifique el correo electrónico del usuario</div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Clave" class="form-label fw-medium">
                                <i class="bi bi-key me-2"></i>Clave
                            </label>
                            <input asp-for="Clave" class="form-control form-control-lg" placeholder="Contraseña" type="password" />
                            <span asp-validation-for="Clave" class="text-danger"></span>
                            <div class="form-text">Modifique la contraseña si es necesario</div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="RolId" class="form-label fw-medium">
                                <i class="bi bi-person-badge me-2"></i>Rol
                            </label>
                            <select asp-for="RolId" class="form-select form-select-lg" asp-items="ViewBag.RolId">
                                <option value="" selected disabled>-- Seleccione un rol --</option>
                            </select>
                            <span asp-validation-for="RolId" class="text-danger"></span>
                            <div class="form-text">Modifique el rol del usuario si corresponde</div>
                        </div>

                        <hr class="my-4">

                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2"></i>Volver al Listado
                            </a>
                            <button type="submit" class="btn btn-success btn-lg px-4">
                                <i class="bi bi-check-circle me-2"></i>Guardar Cambios
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <!-- Help Card -->
            <div class="card border-0 bg-light mb-4">
                <div class="card-body p-4">
                    <h5 class="card-title">
                        <i class="bi bi-info-circle me-2"></i>Información Importante
                    </h5>
                    <p class="card-text">Asegúrese de que los datos del usuario sean correctos y estén actualizados.</p>
                    <ul class="list-group list-group-flush bg-transparent mb-3">
                        <li class="list-group-item bg-transparent border-0 ps-0">
                            <i class="bi bi-check-circle-fill text-success me-2"></i>El correo debe ser único y válido
                        </li>
                        <li class="list-group-item bg-transparent border-0 ps-0">
                            <i class="bi bi-check-circle-fill text-success me-2"></i>La contraseña debe ser segura
                        </li>
                        <li class="list-group-item bg-transparent border-0 ps-0">
                            <i class="bi bi-check-circle-fill text-success me-2"></i>El rol define los permisos del usuario
                        </li>
                    </ul>
                    <p class="card-text">Para más información sobre usuarios, contacte con el equipo de soporte.</p>
                    <a href="#" class="btn btn-outline-success">
                        <i class="bi bi-question-circle me-2"></i>Ayuda con Usuarios
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
