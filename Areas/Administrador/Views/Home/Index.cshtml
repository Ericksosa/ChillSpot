@{
    ViewData["Title"] = "Bienvenido";
}
<style>
    .home-hero {
        background: linear-gradient(to right, #4facfe, #00f2fe);
        color: white;
        padding: 80px 20px;
        text-align: center;
        border-radius: 10px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.2);
        margin-top: 60px; /* Esto baja la sección azul */
    }

    .quick-card {
        border-radius: 15px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        transition: transform 0.2s ease-in-out;
    }

        .quick-card:hover {
            transform: translateY(-5px);
        }

    /* Clase personalizada para bajar las tarjetas */
    .cards-spacing {
        margin-top: 70px;
    }
</style>

<div class="home-hero">
    <h1 class="display-4 fw-bold">Bienvenido a ChillSpot Administrador</h1>
    <p class="lead">Gestiona todo tu contenido, reservas y usuarios desde un solo lugar</p>
</div>

<div class="container cards-spacing">
    <div class="row text-center">
        <div class="col-md-4">
            <div class="card quick-card p-4">
                <i class="bi bi-people-fill fs-1 text-primary"></i>
                <h5 class="mt-3">Gestión de Usuarios</h5>
                <p>Administra cuentas, roles y permisos fácilmente.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card quick-card p-4">
                <i class="bi bi-calendar-check-fill fs-1 text-success"></i>
                <h5 class="mt-3">Gestión de Reservas</h5>
                <p>Controla y organiza todas las reservas en un clic.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card quick-card p-4">
                <i class="bi bi-journal-text fs-1 text-warning"></i>
                <h5 class="mt-3">Gestión de Contenido</h5>
                <p>Publica y edita contenido de forma intuitiva.</p>
            </div>
        </div>
    </div>
</div>