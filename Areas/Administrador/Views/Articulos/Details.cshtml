@model ChillSpot.Models.Articulo

@{
    ViewData["Title"] = "Detalle de Artículo";
}

<div class="container mb-5">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-5 fw-bold">Detalle de Artículo</h1>
            <p class="text-muted">Consulta la información completa del artículo en ChillSpot</p>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <!-- Details Card -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-light py-3">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-film me-2"></i>Información del Artículo
                    </h5>
                </div>
                <div class="card-body p-4">
                    <dl class="row mb-0">
                        <dt class="col-sm-4 text-secondary">
                            <i class="bi bi-card-text me-2"></i>Título
                        </dt>
                        <dd class="col-sm-8 fw-semibold">@Html.DisplayFor(model => model.Titulo)</dd>

                        <dt class="col-sm-4 text-secondary">
                            <i class="bi bi-currency-dollar me-2"></i>Renta por Día
                        </dt>
                        <dd class="col-sm-8 fw-semibold">@Html.DisplayFor(model => model.RentaXdia)</dd>

                        <dt class="col-sm-4 text-secondary">
                            <i class="bi bi-clock-history me-2"></i>Monto Entrega Tardía
                        </dt>
                        <dd class="col-sm-8 fw-semibold">@Html.DisplayFor(model => model.MontoEntregaTardia)</dd>

                        <dt class="col-sm-4 text-secondary">
                            <i class="bi bi-info-circle me-2"></i>Sinopsis
                        </dt>
                        <dd class="col-sm-8 fw-semibold">@Html.DisplayFor(model => model.Sinopsis)</dd>

                        <dt class="col-sm-4 text-secondary">
                            <i class="bi bi-calendar me-2"></i>Año de Estreno
                        </dt>
                        <dd class="col-sm-8 fw-semibold">@Html.DisplayFor(model => model.AnioEstreno)</dd>

                        <dt class="col-sm-4 text-secondary">
                            <i class="bi bi-image me-2"></i>Portada
                        </dt>
                        <dd class="col-sm-8 fw-semibold">@Html.DisplayFor(model => model.PortadaUrl)</dd>

                        <dt class="col-sm-4 text-secondary">
                            <i class="bi bi-link-45deg me-2"></i>Ruta de Video
                        </dt>
                        <dd class="col-sm-8 fw-semibold">@Html.DisplayFor(model => model.RutaUrl)</dd>

                        <dt class="col-sm-4 text-secondary">
                            <i class="bi bi-flag me-2"></i>Estado
                        </dt>
                        <dd class="col-sm-8 fw-semibold">@Html.DisplayFor(model => model.Estado.Nombre)</dd>

                        <dt class="col-sm-4 text-secondary">
                            <i class="bi bi-collection-play me-2"></i>Género
                        </dt>
                        <dd class="col-sm-8 fw-semibold">@Html.DisplayFor(model => model.Genero.Nombre)</dd>

                        <dt class="col-sm-4 text-secondary">
                            <i class="bi bi-translate me-2"></i>Idioma
                        </dt>
                        <dd class="col-sm-8 fw-semibold">@Html.DisplayFor(model => model.Idioma.Nombre)</dd>

                        <dt class="col-sm-4 text-secondary">
                            <i class="bi bi-box-seam me-2"></i>Tipo de Artículo
                        </dt>
                        <dd class="col-sm-8 fw-semibold">@Html.DisplayFor(model => model.TipoArticulo.Nombre)</dd>
                    </dl>
                    <hr class="my-4" />
                    <div class="d-flex justify-content-between align-items-center">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Volver al Listado
                        </a>
                        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">
                            <i class="bi bi-pencil me-2"></i>Editar Artículo
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <!-- Help Card -->
            <div class="card border-0 bg-light mb-4">
                <div class="card-body p-4">
                    <h5 class="card-title">
                        <i class="bi bi-info-circle me-2"></i>Información Importante
                    </h5>
                    <p class="card-text">Asegúrate de que todos los datos del artículo estén completos y sean coherentes.</p>
                    <ul class="list-group list-group-flush bg-transparent mb-3">
                        <li class="list-group-item bg-transparent border-0 ps-0">
                            <i class="bi bi-check-circle-fill text-success me-2"></i>El título debe estar correctamente escrito
                        </li>
                        <li class="list-group-item bg-transparent border-0 ps-0">
                            <i class="bi bi-check-circle-fill text-success me-2"></i>Verifica el género y tipo de artículo
                        </li>
                        <li class="list-group-item bg-transparent border-0 ps-0">
                            <i class="bi bi-check-circle-fill text-success me-2"></i>Revisa los valores monetarios
                        </li>
                    </ul>
                    <p class="card-text">¿Tienes dudas? Comunícate con soporte técnico.</p>
                    <a href="#" class="btn btn-outline-success">
                        <i class="bi bi-question-circle me-2"></i>Ayuda con Artículos
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>