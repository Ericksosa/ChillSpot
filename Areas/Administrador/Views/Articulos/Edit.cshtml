@model ChillSpot.Models.Articulo

@{
    ViewData["Title"] = "Editar Artículo";
}

<div class="container mb-5">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-5 fw-bold">Editar Artículo</h1>
            <p class="text-muted">Modifica la información del artículo en ChillSpot</p>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <!-- Form Card -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-light py-3">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-film me-2"></i>Información del Artículo
                    </h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit" class="needs-validation" novalidate autocomplete="off">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-4">
                            <label asp-for="Titulo" class="form-label fw-medium">
                                <i class="bi bi-text-left me-2"></i>Título
                            </label>
                            <input asp-for="Titulo" class="form-control form-control-lg" placeholder="Título del artículo" />
                            <span asp-validation-for="Titulo" class="text-danger"></span>
                            <div class="form-text">Modifique el título del artículo</div>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label asp-for="TipoArticuloId" class="form-label fw-medium">
                                    <i class="bi bi-collection me-2"></i>Tipo de Artículo
                                </label>
                                <select asp-for="TipoArticuloId" class="form-select form-select-lg" asp-items="ViewBag.TipoArticuloId">
                                    <option value="" selected disabled>-- Seleccione un tipo --</option>
                                </select>
                                <span asp-validation-for="TipoArticuloId" class="text-danger"></span>
                                <div class="form-text">Ejemplo: Película, Serie, Documental</div>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="IdiomaId" class="form-label fw-medium">
                                    <i class="bi bi-translate me-2"></i>Idioma
                                </label>
                                <select asp-for="IdiomaId" class="form-select form-select-lg" asp-items="ViewBag.IdiomaId">
                                    <option value="" selected disabled>-- Seleccione un idioma --</option>
                                </select>
                                <span asp-validation-for="IdiomaId" class="text-danger"></span>
                                <div class="form-text">Idioma principal del contenido</div>
                            </div>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label asp-for="RentaXdia" class="form-label fw-medium">
                                    <i class="bi bi-cash-coin me-2"></i>Renta por Día
                                </label>
                                <div class="input-group input-group-lg">
                                    <input asp-for="RentaXdia" class="form-control" placeholder="Precio de renta" type="number" min="0" step="0.01" />
                                    <span class="input-group-text">DOP</span>
                                </div>
                                <span asp-validation-for="RentaXdia" class="text-danger"></span>
                                <div class="form-text">Precio de alquiler por día</div>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="MontoEntregaTardia" class="form-label fw-medium">
                                    <i class="bi bi-exclamation-triangle me-2"></i>Multa por Entrega Tardía
                                </label>
                                <div class="input-group input-group-lg">
                                    <input asp-for="MontoEntregaTardia" class="form-control" placeholder="Multa" type="number" min="0" step="0.01" />
                                    <span class="input-group-text">DOP</span>
                                </div>
                                <span asp-validation-for="MontoEntregaTardia" class="text-danger"></span>
                                <div class="form-text">Penalización por retraso</div>
                            </div>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label asp-for="EstadoId" class="form-label fw-medium">
                                    <i class="bi bi-flag me-2"></i>Estado
                                </label>
                                <select asp-for="EstadoId" class="form-select form-select-lg" asp-items="ViewBag.EstadoId">
                                    <option value="" selected disabled>-- Seleccione un estado --</option>
                                </select>
                                <span asp-validation-for="EstadoId" class="text-danger"></span>
                                <div class="form-text">Estado actual del artículo</div>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="GeneroId" class="form-label fw-medium">
                                    <i class="bi bi-tags me-2"></i>Género
                                </label>
                                <select asp-for="GeneroId" class="form-select form-select-lg" asp-items="ViewBag.GeneroId">
                                    <option value="" selected disabled>-- Seleccione un género --</option>
                                </select>
                                <span asp-validation-for="GeneroId" class="text-danger"></span>
                                <div class="form-text">Género del contenido</div>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Sinopsis" class="form-label fw-medium">
                                <i class="bi bi-file-text me-2"></i>Sinopsis
                            </label>
                            <textarea asp-for="Sinopsis" class="form-control" rows="4" placeholder="Descripción del contenido del artículo"></textarea>
                            <span asp-validation-for="Sinopsis" class="text-danger"></span>
                            <div class="form-text">Breve descripción del argumento o contenido</div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="AnioEstreno" class="form-label fw-medium">
                                <i class="bi bi-calendar me-2"></i>Año de Estreno
                            </label>
                            <input asp-for="AnioEstreno" class="form-control form-control-lg" placeholder="Año" type="number" min="1900" max="2030" />
                            <span asp-validation-for="AnioEstreno" class="text-danger"></span>
                            <div class="form-text">Año en que se estrenó el contenido</div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="PortadaUrl" class="form-label fw-medium">
                                <i class="bi bi-image me-2"></i>URL de Portada
                            </label>
                            <input asp-for="PortadaUrl" class="form-control form-control-lg" placeholder="https://ejemplo.com/portada.jpg" type="url" />
                            <span asp-validation-for="PortadaUrl" class="text-danger"></span>
                            <div class="form-text">URL de la imagen de portada</div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="RutaUrl" class="form-label fw-medium">
                                <i class="bi bi-link-45deg me-2"></i>URL del Contenido
                            </label>
                            <input asp-for="RutaUrl" class="form-control form-control-lg" placeholder="https://ejemplo.com/contenido" type="url" />
                            <span asp-validation-for="RutaUrl" class="text-danger"></span>
                            <div class="form-text">URL donde se encuentra alojado el contenido</div>
                        </div>

                        <hr class="my-4">

                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2"></i>Volver al Listado
                            </a>
                            <button type="submit" class="btn btn-success btn-lg px-4">
                                <i class="bi bi-check-circle me-2"></i>Guardar Cambios
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <!-- Help Card -->
            <div class="card border-0 bg-light mb-4">
                <div class="card-body p-4">
                    <h5 class="card-title">
                        <i class="bi bi-info-circle me-2"></i>Información Importante
                    </h5>
                    <p class="card-text">Asegúrese de que los datos del artículo sean correctos y estén actualizados.</p>
                    <ul class="list-group list-group-flush bg-transparent mb-3">
                        <li class="list-group-item bg-transparent border-0 ps-0">
                            <i class="bi bi-check-circle-fill text-success me-2"></i>Verifique que las URLs sean válidas
                        </li>
                        <li class="list-group-item bg-transparent border-0 ps-0">
                            <i class="bi bi-check-circle-fill text-success me-2"></i>Los precios deben ser positivos
                        </li>
                        <li class="list-group-item bg-transparent border-0 ps-0">
                            <i class="bi bi-check-circle-fill text-success me-2"></i>El año debe ser realista
                        </li>
                        <li class="list-group-item bg-transparent border-0 ps-0">
                            <i class="bi bi-check-circle-fill text-success me-2"></i>Complete la sinopsis para mejor experiencia
                        </li>
                    </ul>
                    <p class="card-text">Para más información sobre artículos, contacte con el equipo de soporte.</p>
                    <a href="#" class="btn btn-outline-success">
                        <i class="bi bi-question-circle me-2"></i>Ayuda con Artículos
                    </a>
                </div>
            </div>

            <!-- Preview Card -->
            <div class="card border-0 bg-info bg-opacity-10 mb-4">
                <div class="card-body p-4">
                    <h5 class="card-title text-info">
                        <i class="bi bi-eye me-2"></i>Vista Previa
                    </h5>
                    <p class="card-text">Una vez guardado, podrá ver cómo se muestra el artículo en el catálogo.</p>
                    <small class="text-muted">
                        <i class="bi bi-lightbulb me-1"></i>
                        Tip: Use imágenes de alta calidad para mejor presentación.
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}