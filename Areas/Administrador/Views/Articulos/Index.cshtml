@model IEnumerable<ChillSpot.Models.Articulo>

@{
    ViewData["Title"] = "Gestión de Artículos";
}

<div class="container-fluid py-4">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center">
                <div class="mb-3 mb-md-0">
                    <h1 class="display-6 fw-bold text-dark mb-2">Gestión de Artículos</h1>
                    <p class="text-muted mb-0">Administra y visualiza la información de tus artículos</p>
                </div>
                <div>
                    <a asp-action="Create" class="btn btn-primary btn-lg shadow-sm">
                        <i class="bi bi-plus-circle me-2"></i>
                        Nuevo Artículo
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row mb-4">
        <div class="col-md-4 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body d-flex align-items-center">
                    <div class="bg-primary bg-opacity-10 rounded-3 p-3">
                        <i class="bi bi-film text-primary fs-4"></i>
                    </div>
                    <div class="ms-3">
                        <h6 class="text-muted mb-1">Total Artículos</h6>
                        <h3 class="mb-0 fw-bold">@Model.Count()</h3>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body d-flex align-items-center">
                    <div class="bg-success bg-opacity-10 rounded-3 p-3">
                        <i class="bi bi-check2-circle text-success fs-4"></i>
                    </div>
                    <div class="ms-3">
                        <h6 class="text-muted mb-1">Activos</h6>
                        <h3 class="mb-0 fw-bold">@Model.Count(a => a.Estado != null && (a.Estado.Nombre == "Activo" || a.Estado.Nombre == "Disponible"))</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content Card -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white border-bottom d-flex justify-content-between align-items-center">
            <h5 class="mb-0 fw-semibold">Lista de Artículos</h5>
            <div class="d-flex gap-2">
                <button class="btn btn-outline-secondary btn-sm">
                    <i class="bi bi-funnel me-1"></i> Filtrar
                </button>
                <button class="btn btn-outline-success btn-sm">
                    <i class="bi bi-download me-1"></i> Exportar
                </button>
            </div>
        </div>

        <div class="card-body p-0">
            @if (Model.Any())
            {
                <!-- Mobile Cards View -->
                <div class="d-block d-lg-none">
                    @foreach (var item in Model)
                    {
                        <div class="border-bottom p-3">
                            <h6 class="fw-bold mb-1">@item.Titulo</h6>
                            <small class="text-muted d-block mb-2">Año: @item.AnioEstreno</small>

                            <div class="row g-2 mb-3">
                                <div class="col-6">
                                    <small class="text-muted d-block">Renta/Día</small>
                                    <span class="fw-medium small text-success">$@item.RentaXdia</span>
                                </div>
                                <div class="col-6">
                                    <small class="text-muted d-block">Entrega Tardía</small>
                                    <span class="fw-medium small text-danger">$@item.MontoEntregaTardia</span>
                                </div>
                                <div class="col-6">
                                    <small class="text-muted d-block">Estado</small>
                                    <span class="badge @(item.Estado != null && (item.Estado.Nombre == "Activo" || item.Estado.Nombre == "Disponible") ? "bg-success" : "bg-danger")">
                                        @(item.Estado?.Nombre ?? "Sin estado")
                                    </span>
                                </div>
                                <div class="col-6">
                                    <small class="text-muted d-block">Género</small>
                                    <span class="fw-medium small">@(item.Genero?.Nombre ?? "N/A")</span>
                                </div>
                                <div class="col-6">
                                    <small class="text-muted d-block">Idioma</small>
                                    <span class="fw-medium small">@(item.Idioma?.Nombre ?? "N/A")</span>
                                </div>
                                <div class="col-6">
                                    <small class="text-muted d-block">Tipo</small>
                                    <span class="fw-medium small">@(item.TipoArticulo?.Nombre ?? "N/A")</span>
                                </div>
                            </div>

                            <div class="d-flex gap-2">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-pencil me-1"></i> Editar
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-secondary btn-sm">
                                    <i class="bi bi-eye me-1"></i> Ver
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">
                                    <i class="bi bi-trash me-1"></i> Eliminar
                                </a>
                            </div>
                        </div>
                    }
                </div>

                <!-- Desktop Table View -->
                <div class="d-none d-lg-block">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Título</th>
                                    <th>Renta/Día</th>
                                    <th>Entrega Tardía</th>
                                    <th>Año</th>
                                    <th>Estado</th>
                                    <th>Género</th>
                                    <th>Idioma</th>
                                    <th>Tipo</th>
                                    <th class="text-end">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="align-middle fw-semibold">@item.Titulo</td>
                                        <td class="align-middle text-success">$@item.RentaXdia</td>
                                        <td class="align-middle text-danger">$@item.MontoEntregaTardia</td>
                                        <td class="align-middle">@item.AnioEstreno</td>
                                        <td class="align-middle">
                                            <span class="badge @(item.Estado != null && (item.Estado.Nombre == "Activo" || item.Estado.Nombre == "Disponible") ? "bg-success" : "bg-danger")">
                                                @(item.Estado?.Nombre ?? "Sin estado")
                                            </span>
                                        </td>
                                        <td class="align-middle">@(item.Genero?.Nombre ?? "Sin género")</td>
                                        <td class="align-middle">@(item.Idioma?.Nombre ?? "Sin idioma")</td>
                                        <td class="align-middle">@(item.TipoArticulo?.Nombre ?? "Sin tipo")</td>
                                        <td class="align-middle text-end">
                                            <div class="btn-group">
                                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm" data-bs-toggle="tooltip" title="Editar">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-secondary btn-sm" data-bs-toggle="tooltip" title="Ver detalles">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm" data-bs-toggle="tooltip" title="Eliminar">
                                                    <i class="bi bi-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            }
            else
            {
                <!-- Empty State -->
                <div class="text-center py-5">
                    <div class="mb-4">
                        <i class="bi bi-film text-muted" style="font-size: 4rem;"></i>
                    </div>
                    <h4 class="text-muted mb-2">No hay artículos registrados</h4>
                    <p class="text-muted mb-4">Comienza agregando tu primer artículo al sistema.</p>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="bi bi-plus-circle me-2"></i> Crear Primer Artículo
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<!-- CSS & Tooltip Script -->
<style>
    .card {
        transition: all 0.2s ease-in-out;
    }

        .card:hover {
            transform: translateY(-2px);
        }

    .table tbody tr:hover {
        background-color: rgba(0, 123, 255, 0.05);
    }

    .bg-opacity-10 {
        background-color: rgba(var(--bs-primary-rgb), 0.1) !important;
    }

    .bg-success.bg-opacity-10 {
        background-color: rgba(var(--bs-success-rgb), 0.1) !important;
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        tooltipTriggerList.map(el => new bootstrap.Tooltip(el));
    });
</script>