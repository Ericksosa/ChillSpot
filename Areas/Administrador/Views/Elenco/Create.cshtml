@model ChillSpot.Models.Elenco

@{
    ViewData["Title"] = "Crear Miembro de Elenco";
}

<div class="container mb-5">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-5 fw-bold">Nuevo Miembro de Elenco</h1>
            <p class="text-muted">Complete el formulario para registrar un nuevo miembro en el elenco de ChillSpot</p>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <!-- Form Card -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-light py-3">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-person-plus me-2"></i>Información del Miembro
                    </h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" class="needs-validation" novalidate autocomplete="off">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-4">
                            <label asp-for="Nombre" class="form-label fw-medium">
                                <i class="bi bi-person me-2"></i>Nombre
                            </label>
                            <input asp-for="Nombre" class="form-control form-control-lg" placeholder="Nombre" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                            <div class="form-text">Ingrese el nombre del miembro</div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Apellido" class="form-label fw-medium">
                                <i class="bi bi-person me-2"></i>Apellido
                            </label>
                            <input asp-for="Apellido" class="form-control form-control-lg" placeholder="Apellido" />
                            <span asp-validation-for="Apellido" class="text-danger"></span>
                            <div class="form-text">Ingrese el apellido del miembro</div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="FechaNacimiento" class="form-label fw-medium">
                                <i class="bi bi-calendar-date me-2"></i>Fecha de Nacimiento
                            </label>
                            <input asp-for="FechaNacimiento" class="form-control form-control-lg" type="date" />
                            <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
                            <div class="form-text">Seleccione la fecha de nacimiento</div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="RolProfesionalId" class="form-label fw-medium">
                                <i class="bi bi-person-badge me-2"></i>Rol Profesional
                            </label>
                            <select asp-for="RolProfesionalId" class="form-select form-select-lg" asp-items="@ViewBag.RolProfesionalId">
                                <option value="" selected disabled>-- Seleccione un rol profesional --</option>
                            </select>
                            <span asp-validation-for="RolProfesionalId" class="text-danger"></span>
                            <div class="form-text">Seleccione el rol profesional del miembro</div>
                        </div>

                        <hr class="my-4">

                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2"></i>Volver al Listado
                            </a>
                            <button type="submit" class="btn btn-success btn-lg px-4">
                                <i class="bi bi-check-circle me-2"></i>Guardar Miembro
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <!-- Help Card -->
            <div class="card border-0 bg-light mb-4">
                <div class="card-body p-4">
                    <h5 class="card-title">
                        <i class="bi bi-info-circle me-2"></i>Información Importante
                    </h5>
                    <p class="card-text">Asegúrese de que los datos del miembro sean correctos y estén actualizados.</p>
                    <ul class="list-group list-group-flush bg-transparent mb-3">
                        <li class="list-group-item bg-transparent border-0 ps-0">
                            <i class="bi bi-check-circle-fill text-success me-2"></i>Verifique el nombre y apellido antes de guardar
                        </li>
                        <li class="list-group-item bg-transparent border-0 ps-0">
                            <i class="bi bi-check-circle-fill text-success me-2"></i>La fecha de nacimiento debe ser válida
                        </li>
                        <li class="list-group-item bg-transparent border-0 ps-0">
                            <i class="bi bi-check-circle-fill text-success me-2"></i>El rol profesional debe estar correctamente asignado
                        </li>
                    </ul>
                    <p class="card-text">Para más información sobre el elenco, contacte con el equipo de soporte.</p>
                    <a href="#" class="btn btn-outline-success">
                        <i class="bi bi-question-circle me-2"></i>Ayuda con Elenco
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
