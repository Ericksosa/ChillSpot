@{
    ViewData["Title"] = "Asignar Penalización a Reserva";
    var penalizacionId = (long)ViewData["PenalizacionId"];
}

<h2>Asignar Penalización a Reserva</h2>

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success">@TempData["Mensaje"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<form asp-action="AsignarAReserva" method="post">
    <input type="hidden" name="PenalizacionId" value="@penalizacionId" />
    <div class="form-group">
        <label for="ReservaId">Reserva</label>
        <select name="ReservaId" class="form-control" asp-items="ViewBag.ReservaId"></select>
    </div>
    <button type="submit" class="btn btn-primary">Asignar</button>
</form>