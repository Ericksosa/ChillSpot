@model ChillSpot.Models.TipoArticulo

@{
    ViewData["Title"] = "Editar Tipo de Artículo";
}

<div class="container mb-5">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-5 fw-bold">Editar Tipo de Artículo</h1>
            <p class="text-muted">Modifica la información del tipo de artículo en ChillSpot</p>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <!-- Form Card -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-light py-3">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-pencil-square me-2"></i>Información del Tipo de Artículo
                    </h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit" class="needs-validation" novalidate autocomplete="off">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-4">
                            <label asp-for="Nombre" class="form-label fw-medium">
                                <i class="bi bi-text-left me-2"></i>Nombre
                            </label>
                            <input asp-for="Nombre" class="form-control form-control-lg" placeholder="Nombre del tipo de artículo" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                            <div class="form-text">Modifique el nombre del tipo de artículo</div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Descripcion" class="form-label fw-medium">
                                <i class="bi bi-card-text me-2"></i>Descripción
                            </label>
                            <textarea asp-for="Descripcion" class="form-control" rows="4" placeholder="Descripción del tipo de artículo"></textarea>
                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                            <div class="form-text">Modifique la descripción del tipo de artículo</div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="EstadoId" class="form-label fw-medium">
                                <i class="bi bi-flag me-2"></i>Estado
                            </label>
                            <select asp-for="EstadoId" class="form-select form-select-lg" asp-items="ViewBag.EstadoId">
                                <option value="" selected disabled>-- Seleccione un estado --</option>
                            </select>
                            <span asp-validation-for="EstadoId" class="text-danger"></span>
                            <div class="form-text">Modifique el estado actual del tipo de artículo</div>
                        </div>

                        <hr class="my-4">

                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2"></i>Volver al Listado
                            </a>
                            <button type="submit" class="btn btn-success btn-lg px-4">
                                <i class="bi bi-check-circle me-2"></i>Guardar Cambios
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <!-- Help Card -->
            <div class="card border-0 bg-light mb-4">
                <div class="card-body p-4">
                    <h5 class="card-title">
                        <i class="bi bi-info-circle me-2"></i>Información Importante
                    </h5>
                    <p class="card-text">Asegúrese de que los datos del tipo de artículo sean correctos y estén actualizados.</p>
                    <ul class="list-group list-group-flush bg-transparent mb-3">
                        <li class="list-group-item bg-transparent border-0 ps-0">
                            <i class="bi bi-check-circle-fill text-success me-2"></i>Use nombres descriptivos y claros
                        </li>
                        <li class="list-group-item bg-transparent border-0 ps-0">
                            <i class="bi bi-check-circle-fill text-success me-2"></i>La descripción ayuda a identificar el uso
                        </li>
                        <li class="list-group-item bg-transparent border-0 ps-0">
                            <i class="bi bi-check-circle-fill text-success me-2"></i>Los tipos activos estarán disponibles para usar
                        </li>
                    </ul>
                    <p class="card-text">Para más información sobre tipos de artículos, contacte con el equipo de soporte.</p>
                    <a href="#" class="btn btn-outline-success">
                        <i class="bi bi-question-circle me-2"></i>Ayuda con Tipos
                    </a>
                </div>
            </div>

            <!-- Impact Warning Card -->
            <div class="card border-0 bg-warning bg-opacity-10 mb-4">
                <div class="card-body p-4">
                    <h5 class="card-title text-warning">
                        <i class="bi bi-exclamation-triangle me-2"></i>Consideraciones
                    </h5>
                    <p class="card-text">Los cambios en este tipo pueden afectar artículos existentes.</p>
                    <small class="text-muted">
                        <i class="bi bi-info-circle me-1"></i>
                        Si cambia el estado a "Inactivo", los artículos asociados podrían verse afectados.
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}