@model ChillSpot.Models.TipoArticulo

@{
    ViewData["Title"] = "Crear Tipo de Artículo";
}

<div class="container mb-5">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-5 fw-bold">Nuevo Tipo de Artículo</h1>
            <p class="text-muted">Complete el formulario para registrar un nuevo tipo de artículo en ChillSpot</p>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <!-- Form Card -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-light py-3">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-collection-plus me-2"></i>Información del Tipo de Artículo
                    </h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" class="needs-validation" novalidate autocomplete="off">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-4">
                            <label asp-for="Nombre" class="form-label fw-medium">
                                <i class="bi bi-text-left me-2"></i>Nombre
                            </label>
                            <input asp-for="Nombre" class="form-control form-control-lg" placeholder="Nombre del tipo de artículo" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                            <div class="form-text">Ingrese el nombre del tipo de artículo (ej: Película, Serie, Documental)</div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Descripcion" class="form-label fw-medium">
                                <i class="bi bi-card-text me-2"></i>Descripción
                            </label>
                            <textarea asp-for="Descripcion" class="form-control" rows="4" placeholder="Descripción del tipo de artículo"></textarea>
                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                            <div class="form-text">Proporcione una descripción detallada del tipo de artículo</div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="EstadoId" class="form-label fw-medium">
                                <i class="bi bi-flag me-2"></i>Estado
                            </label>
                            <select asp-for="EstadoId" class="form-select form-select-lg" asp-items="ViewBag.EstadoId">
                                <option value="" selected disabled>-- Seleccione un estado --</option>
                            </select>
                            <span asp-validation-for="EstadoId" class="text-danger"></span>
                            <div class="form-text">Seleccione el estado inicial del tipo de artículo</div>
                        </div>

                        <hr class="my-4">

                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2"></i>Volver al Listado
                            </a>
                            <button type="submit" class="btn btn-success btn-lg px-4">
                                <i class="bi bi-check-circle me-2"></i>Guardar Tipo
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <!-- Help Card -->
            <div class="card border-0 bg-light mb-4">
                <div class="card-body p-4">
                    <h5 class="card-title">
                        <i class="bi bi-info-circle me-2"></i>Información Importante
                    </h5>
                    <p class="card-text">Los tipos de artículos permiten clasificar y organizar el contenido disponible.</p>
                    <ul class="list-group list-group-flush bg-transparent mb-3">
                        <li class="list-group-item bg-transparent border-0 ps-0">
                            <i class="bi bi-check-circle-fill text-success me-2"></i>Use nombres descriptivos y claros
                        </li>
                        <li class="list-group-item bg-transparent border-0 ps-0">
                            <i class="bi bi-check-circle-fill text-success me-2"></i>La descripción ayuda a identificar el uso
                        </li>
                        <li class="list-group-item bg-transparent border-0 ps-0">
                            <i class="bi bi-check-circle-fill text-success me-2"></i>Los tipos activos estarán disponibles para usar
                        </li>
                    </ul>
                    <p class="card-text">Para más información sobre tipos de artículos, contacte con el equipo de soporte.</p>
                    <a href="#" class="btn btn-outline-success">
                        <i class="bi bi-question-circle me-2"></i>Ayuda con Tipos
                    </a>
                </div>
            </div>

            <!-- Examples Card -->
            <div class="card border-0 bg-info bg-opacity-10 mb-4">
                <div class="card-body p-4">
                    <h5 class="card-title text-info">
                        <i class="bi bi-lightbulb me-2"></i>Ejemplos de Tipos
                    </h5>
                    <p class="card-text">Algunos ejemplos comunes de tipos de artículos:</p>
                    <ul class="list-unstyled mb-0">
                        <li class="mb-1">
                            <i class="bi bi-camera-reels me-2 text-info"></i>
                            <strong>Película</strong> - Largometrajes cinematográficos
                        </li>
                        <li class="mb-1">
                            <i class="bi bi-tv me-2 text-info"></i>
                            <strong>Serie</strong> - Contenido episódico
                        </li>
                        <li class="mb-1">
                            <i class="bi bi-book me-2 text-info"></i>
                            <strong>Documental</strong> - Contenido educativo/informativo
                        </li>
                        <li class="mb-1">
                            <i class="bi bi-clock me-2 text-info"></i>
                            <strong>Corto</strong> - Contenido de corta duración
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}