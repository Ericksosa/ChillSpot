@model ChillSpot.Models.Cliente

@{
    ViewData["Title"] = "Eliminar Cliente";
}

<div class="container mb-5">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-5 fw-bold text-danger">
                <i class="bi bi-trash3 me-2"></i>Eliminar Cliente
            </h1>
            <p class="text-muted">¿Estás seguro que deseas eliminar este cliente? Esta acción no se puede deshacer.</p>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <!-- Details Card -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-danger bg-opacity-10 py-3">
                    <h5 class="card-title mb-0 text-danger">
                        <i class="bi bi-exclamation-triangle me-2"></i>Confirmar Eliminación
                    </h5>
                </div>
                <div class="card-body p-4">
                    <dl class="row mb-0">
                        <dt class="col-sm-4 text-secondary">
                            <i class="bi bi-person me-2"></i>Nombre
                        </dt>
                        <dd class="col-sm-8 fw-semibold">
                            @Html.DisplayFor(model => model.Nombre)
                        </dd>
                        <dt class="col-sm-4 text-secondary">
                            <i class="bi bi-card-list me-2"></i>Cédula
                        </dt>
                        <dd class="col-sm-8 fw-semibold">
                            @Html.DisplayFor(model => model.Cedula)
                        </dd>
                        <dt class="col-sm-4 text-secondary">
                            <i class="bi bi-credit-card me-2"></i>Tarjeta de Crédito
                        </dt>
                        <dd class="col-sm-8 fw-semibold">
                            @Html.DisplayFor(model => model.TarjetaCr)
                        </dd>
                        <dt class="col-sm-4 text-secondary">
                            <i class="bi bi-cash-stack me-2"></i>Límite de Crédito
                        </dt>
                        <dd class="col-sm-8 fw-semibold">
                            @Html.DisplayFor(model => model.LimiteCredito)
                        </dd>
                        <dt class="col-sm-4 text-secondary">
                            <i class="bi bi-person-badge me-2"></i>Tipo de Persona
                        </dt>
                        <dd class="col-sm-8 fw-semibold">
                            @Html.DisplayFor(model => model.TipoPersona)
                        </dd>
                        <dt class="col-sm-4 text-secondary">
                            <i class="bi bi-flag me-2"></i>Estado
                        </dt>
                        <dd class="col-sm-8 fw-semibold">
                            @Html.DisplayFor(model => model.Estado.Nombre)
                        </dd>
                        <dt class="col-sm-4 text-secondary">
                            <i class="bi bi-person-circle me-2"></i>Usuario
                        </dt>
                        <dd class="col-sm-8 fw-semibold">
                            @Html.DisplayFor(model => model.Usuario.Nombre)
                        </dd>
                    </dl>
                    <hr class="my-4" />
                    <form asp-action="Delete" class="d-flex justify-content-between align-items-center">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger btn-lg px-4">
                            <i class="bi bi-trash3 me-2"></i>Eliminar Cliente
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Cancelar
                        </a>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <!-- Help Card -->
            <div class="card border-0 bg-light mb-4">
                <div class="card-body p-4">
                    <h5 class="card-title text-danger">
                        <i class="bi bi-info-circle me-2"></i>Advertencia
                    </h5>
                    <p class="card-text">Esta acción eliminará permanentemente el cliente y no se puede deshacer.</p>
                    <ul class="list-group list-group-flush bg-transparent mb-3">
                        <li class="list-group-item bg-transparent border-0 ps-0">
                            <i class="bi bi-x-circle-fill text-danger me-2"></i>Verifica que el cliente no tenga dependencias importantes
                        </li>
                        <li class="list-group-item bg-transparent border-0 ps-0">
                            <i class="bi bi-x-circle-fill text-danger me-2"></i>Confirma que realmente deseas eliminar este cliente
                        </li>
                    </ul>
                    <p class="card-text">Para más información sobre clientes, contacte con el equipo de soporte.</p>
                    <a href="#" class="btn btn-outline-danger">
                        <i class="bi bi-question-circle me-2"></i>Ayuda con Clientes
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
