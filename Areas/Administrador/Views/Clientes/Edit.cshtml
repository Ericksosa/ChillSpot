@model ChillSpot.Models.Cliente

@{
    ViewData["Title"] = "Editar Cliente";
}

<div class="container mb-5">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-5 fw-bold">Editar Cliente</h1>
            <p class="text-muted">Modifica la información del cliente en ChillSpot</p>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <!-- Form Card -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-light py-3">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-pencil-square me-2"></i>Información del Cliente
                    </h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit" class="needs-validation" novalidate autocomplete="off">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-4">
                            <label asp-for="Nombre" class="form-label fw-medium">
                                <i class="bi bi-person me-2"></i>Nombre
                            </label>
                            <input asp-for="Nombre" class="form-control form-control-lg" placeholder="Nombre completo" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                            <div class="form-text">Modifique el nombre completo del cliente</div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Cedula" class="form-label fw-medium">
                                <i class="bi bi-card-list me-2"></i>Cédula
                            </label>
                            <input asp-for="Cedula" class="form-control form-control-lg" placeholder="Cédula" />
                            <span asp-validation-for="Cedula" class="text-danger"></span>
                            <div class="form-text">Modifique la cédula del cliente</div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="TarjetaCr" class="form-label fw-medium">
                                <i class="bi bi-credit-card me-2"></i>Tarjeta de Crédito
                            </label>
                            <input asp-for="TarjetaCr" class="form-control form-control-lg" placeholder="Número de tarjeta" />
                            <span asp-validation-for="TarjetaCr" class="text-danger"></span>
                            <div class="form-text">Modifique el número de tarjeta de crédito</div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="LimiteCredito" class="form-label fw-medium">
                                <i class="bi bi-cash-stack me-2"></i>Límite de Crédito
                            </label>
                            <div class="input-group input-group-lg">
                                <input asp-for="LimiteCredito" class="form-control" placeholder="Límite de crédito" type="number" min="0" />
                                <span class="input-group-text">DOP</span>
                            </div>
                            <span asp-validation-for="LimiteCredito" class="text-danger"></span>
                            <div class="form-text">Modifique el límite de crédito disponible</div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="TipoPersona" class="form-label fw-medium">
                                <i class="bi bi-person-badge me-2"></i>Tipo de Persona
                            </label>
                            <input asp-for="TipoPersona" class="form-control form-control-lg" placeholder="Tipo de persona" />
                            <span asp-validation-for="TipoPersona" class="text-danger"></span>
                            <div class="form-text">Ejemplo: Física, Jurídica</div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="EstadoId" class="form-label fw-medium">
                                <i class="bi bi-flag me-2"></i>Estado
                            </label>
                            <select asp-for="EstadoId" class="form-select form-select-lg" asp-items="ViewBag.EstadoId">
                                <option value="" selected disabled>-- Seleccione un estado --</option>
                            </select>
                            <span asp-validation-for="EstadoId" class="text-danger"></span>
                            <div class="form-text">Modifique el estado actual del cliente</div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="UsuarioId" class="form-label fw-medium">
                                <i class="bi bi-person-circle me-2"></i>Usuario
                            </label>
                            <select asp-for="UsuarioId" class="form-select form-select-lg" asp-items="ViewBag.UsuarioId">
                                <option value="" selected disabled>-- Seleccione un usuario --</option>
                            </select>
                            <span asp-validation-for="UsuarioId" class="text-danger"></span>
                            <div class="form-text">Modifique el usuario asociado al cliente</div>
                        </div>

                        <hr class="my-4">

                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2"></i>Volver al Listado
                            </a>
                            <button type="submit" class="btn btn-success btn-lg px-4">
                                <i class="bi bi-check-circle me-2"></i>Guardar Cambios
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <!-- Help Card -->
            <div class="card border-0 bg-light mb-4">
                <div class="card-body p-4">
                    <h5 class="card-title">
                        <i class="bi bi-info-circle me-2"></i>Información Importante
                    </h5>
                    <p class="card-text">Asegúrese de que los datos del cliente sean correctos y estén actualizados.</p>
                    <ul class="list-group list-group-flush bg-transparent mb-3">
                        <li class="list-group-item bg-transparent border-0 ps-0">
                            <i class="bi bi-check-circle-fill text-success me-2"></i>Verifique la cédula antes de guardar
                        </li>
                        <li class="list-group-item bg-transparent border-0 ps-0">
                            <i class="bi bi-check-circle-fill text-success me-2"></i>El usuario debe estar disponible y no asignado
                        </li>
                        <li class="list-group-item bg-transparent border-0 ps-0">
                            <i class="bi bi-check-circle-fill text-success me-2"></i>El límite de crédito debe ser positivo
                        </li>
                    </ul>
                    <p class="card-text">Para más información sobre clientes, contacte con el equipo de soporte.</p>
                    <a href="#" class="btn btn-outline-success">
                        <i class="bi bi-question-circle me-2"></i>Ayuda con Clientes
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
