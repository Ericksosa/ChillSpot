@model ChillSpot.Models.Reserva

@{
    ViewData["Title"] = "Eliminar Reserva";
}

<div class="container mb-5">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-5 fw-bold text-danger">
                <i class="bi bi-trash3 me-2"></i>Eliminar Reserva
            </h1>
            <p class="text-muted">¿Estás seguro que deseas eliminar esta reserva? Esta acción no se puede deshacer.</p>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <!-- Details Card -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-danger bg-opacity-10 py-3">
                    <h5 class="card-title mb-0 text-danger">
                        <i class="bi bi-exclamation-triangle me-2"></i>Confirmar Eliminación
                    </h5>
                </div>
                <div class="card-body p-4">
                    <dl class="row mb-0">
                        <dt class="col-sm-4 text-secondary">
                            <i class="bi bi-calendar me-2"></i>Fecha Creación
                        </dt>
                        <dd class="col-sm-8 fw-semibold">
                            @Html.DisplayFor(model => model.FechaCreacion)
                        </dd>
                        <dt class="col-sm-4 text-secondary">
                            <i class="bi bi-clock me-2"></i>Duración
                        </dt>
                        <dd class="col-sm-8 fw-semibold">
                            @Html.DisplayFor(model => model.DuracionReserva)
                        </dd>
                        <dt class="col-sm-4 text-secondary">
                            <i class="bi bi-cash-coin me-2"></i>Monto Total
                        </dt>
                        <dd class="col-sm-8 fw-semibold">
                            $@Html.DisplayFor(model => model.MontoTotal)
                        </dd>
                        <dt class="col-sm-4 text-secondary">
                            <i class="bi bi-box-seam me-2"></i>Artículo
                        </dt>
                        <dd class="col-sm-8 fw-semibold">
                            @(Model.Articulo != null ? Model.Articulo.Titulo ?? $"ID: {Model.Articulo.Id}" : "Sin artículo")
                        </dd>
                        <dt class="col-sm-4 text-secondary">
                            <i class="bi bi-person me-2"></i>Cliente
                        </dt>
                        <dd class="col-sm-8 fw-semibold">
                            @(Model.Cliente != null ? Model.Cliente.Nombre ?? $"ID: {Model.Cliente.Id}" : "Sin cliente")
                        </dd>
                        <dt class="col-sm-4 text-secondary">
                            <i class="bi bi-person-badge me-2"></i>Empleado
                        </dt>
                        <dd class="col-sm-8 fw-semibold">
                            @(Model.Empleado != null ? Model.Empleado.Nombre ?? $"ID: {Model.Empleado.Id}" : "Sin empleado")
                        </dd>
                        <dt class="col-sm-4 text-secondary">
                            <i class="bi bi-flag me-2"></i>Estado
                        </dt>
                        <dd class="col-sm-8 fw-semibold">
                            @(Model.Estado != null ? Model.Estado.Nombre : "Sin estado")
                        </dd>
                        <dt class="col-sm-4 text-secondary">
                            <i class="bi bi-percent me-2"></i>Descuento
                        </dt>
                        <dd class="col-sm-8 fw-semibold">
                            @(Model.IdDescuentoNavigation != null ? Model.IdDescuentoNavigation.Descripcion ?? $"ID: {Model.IdDescuentoNavigation.Id}" : "Sin descuento")
                        </dd>
                        <dt class="col-sm-4 text-secondary">
                            <i class="bi bi-exclamation-triangle me-2"></i>Penalización
                        </dt>
                        <dd class="col-sm-8 fw-semibold">
                            @(Model.Penalizacion != null ? Model.Penalizacion.Nombre ?? $"ID: {Model.Penalizacion.Id}" : "Sin penalización")
                        </dd>
                    </dl>
                    <hr class="my-4" />
                    <form asp-action="Delete" class="d-flex justify-content-between align-items-center">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger btn-lg px-4">
                            <i class="bi bi-trash3 me-2"></i>Eliminar Reserva
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Cancelar
                        </a>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <!-- Help Card -->
            <div class="card border-0 bg-light mb-4">
                <div class="card-body p-4">
                    <h5 class="card-title text-danger">
                        <i class="bi bi-info-circle me-2"></i>Advertencia
                    </h5>
                    <p class="card-text">Esta acción eliminará permanentemente la reserva y no se puede deshacer.</p>
                    <ul class="list-group list-group-flush bg-transparent mb-3">
                        <li class="list-group-item bg-transparent border-0 ps-0">
                            <i class="bi bi-x-circle-fill text-danger me-2"></i>Verifica que la reserva no tenga dependencias importantes
                        </li>
                        <li class="list-group-item bg-transparent border-0 ps-0">
                            <i class="bi bi-x-circle-fill text-danger me-2"></i>Confirma que realmente deseas eliminar esta reserva
                        </li>
                    </ul>
                    <p class="card-text">Para más información sobre reservas, contacte con el equipo de soporte.</p>
                    <a href="#" class="btn btn-outline-danger">
                        <i class="bi bi-question-circle me-2"></i>Ayuda con Reservas
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
