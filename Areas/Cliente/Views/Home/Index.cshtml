@{
    ViewData["Title"] = "Bienvenido";
}

<style>
    .home-hero {
        background: linear-gradient(to right, #43cea2, #185a9d);
        color: white;
        padding: 80px 20px;
        text-align: center;
        border-radius: 10px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.2);
        margin-top: 60px;
    }

    .quick-card {
        border-radius: 15px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        transition: transform 0.2s ease-in-out;
    }

        .quick-card:hover {
            transform: translateY(-5px);
        }

    .cards-spacing {
        margin-top: 70px;
    }
</style>

<div class="home-hero">
    <h1 class="display-4 fw-bold">Bienvenido a ChillSpot</h1>
    <p class="lead">Gestiona fácilmente tus reservas desde un solo lugar</p>
</div>

<div class="container mt-5">
    <div class="row text-center">
        <!-- Crear Reserva -->
        <div class="col-md-4 mb-4">
            <div class="card quick-card p-4">
                <i class="bi bi-calendar-plus-fill fs-1 text-primary"></i>
                <h5 class="mt-3">Crear Reserva</h5>
                <p>Haz una nueva reserva en pocos pasos.</p>
            </div>
        </div>

        <!-- Editar Reserva -->
        <div class="col-md-4 mb-4">
            <div class="card quick-card p-4">
                <i class="bi bi-pencil-square fs-1 text-success"></i>
                <h5 class="mt-3">Editar Reserva</h5>
                <p>Modifica la fecha, hora o detalles de tu reserva.</p>
            </div>
        </div>

        <!-- Eliminar Reserva -->
        <div class="col-md-4 mb-4">
            <div class="card quick-card p-4">
                <i class="bi bi-trash-fill fs-1 text-danger"></i>
                <h5 class="mt-3">Eliminar Reserva</h5>
                <p>Cancela una reserva que ya no necesites.</p>
            </div>
        </div>
    </div>
</div>